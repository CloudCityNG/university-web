- content_for :header_bottom do
  :javascript
    $(document).ready(function(){
      $('#user_email').focus();
    });

- title 'Sign in'

.rmu_seal

= image_tag "rmu_header.png", :alt => "Ruby Mendicant University", 
  :class => "rmu-header"

- if error = flash[:alert]
  %p{:style=>"color: red;"}= error

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'bp'}) do |f|
  %p
    = f.label :email
    = f.text_field :email

  %p
    = f.label :password
    = f.password_field :password

  - if devise_mapping.rememberable?
    %p
      = f.check_box :remember_me
      = f.label :remember_me

  .block= f.submit "Sign in", :class => "clean-green"