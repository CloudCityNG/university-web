!!! Strict
%html
  %head
    %title
      = yield(:title).blank? ? controller_name.humanize : yield(:title)
      \- RMU
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'buttons.css', 'smoothness/jquery-ui.css'
    = javascript_include_tag 'jquery-1.4.2.js', 'jquery.scrollTo', 'jquery.infieldlabel.min.js', 'jquery.jeditable.js', 'jquery-ui', 'showdown', 'nested_form', 'application', 'rails'
    = csrf_meta_tag
    
    = yield(:header_bottom)

  %body
    #header
      %h1 Ruby Mendicant University
      
      - if current_user
        #user
          = link_to "#" do
            = current_user.name
            = image_tag "down_arrow.png", :class => "drop"
    
    #nav
      %ul
        %li= link_to "Dashboard"
        %li= link_to "Courses".html_safe + image_tag("down_arrow.png", :class => "drop")
        %li= link_to "Directory"
        %li= link_to "Administration"
      .clear
  
    #wrap
      #flash
        - flash.each do |flashtype, message|
          %div{:class => "flash #{flashtype}", :id => "flash-#{flashtype}"}
            = message
          :javascript
            setTimeout("$('div.flash').slideUp()", 4000);
      /= yield
        
/ = render :partial => "/shared/menu"
/   - unless yield(:secondary_navigation).blank?
/     .secondary
/       = yield(:secondary_navigation)