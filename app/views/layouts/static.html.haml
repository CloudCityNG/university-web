!!! Strict
%html
  %head
    %title Ruby Mendicant University
    %meta{:"http-equiv"=>"Content-Type",:content=>"text/html;charset=utf-8"}
    %link{:href=>"/stylesheets/public.css",:type=>"text/css",:rel=>"stylesheet"}
  %body
    #header
      #logo
        %img.logo{:src=>"/images/rmu_logo.png"}
        %h1 Ruby Mendicant University
        
        - # HACK for Rails layout
        - current = nil if !defined?(current)
      
      #menu_bar
        .center
          %ul.menu
            %li.first
              %a{:href=>"/", :class => current_page('index', current)} Home
            %li
              %a{:href=>"/about.html", 
                :class => current_page('about', current)} About RMU
            %li 
              %a{:href=>"/library.html", 
                :class => current_page('library', current)} Learning Resources
            %li 
              %a{:href=>"/projects.html", 
                :class => current_page('projects', current)} Code
            %li
              %a{:href=>"/alumni.html", 
                :class => current_page('alumni', current)} Alumni List
            %li.last
              %a{:href=>"/users/sign_in"} Sign in
    #container 
      #content
        = yield
        #footer
          An 
          %a{:href=>"http://educationreimagined.com"} Education Reimagined
          Project
      