%h1
  = link_to "#{@course.name}:", edit_admin_course_path(@course)
  Assignments
  
=  button_to "Create Assignment", new_admin_course_assignment_path(@course),
    :method => :get

%table.edit
  %thead
    %tr
      %th Assignment
      %th 
  %tbody
    - @assignments.each do |assignment|
      %tr{:class => cycle('even','odd')}
        %td= link_to assignment.name,
              edit_admin_course_assignment_path(@course, assignment)
        %td= link_to( "Destroy",
              admin_course_assignment_path(@course, assignment), 
              :confirm => "Are you sure you wish to delete this assignment?",
              :method => 'DELETE')